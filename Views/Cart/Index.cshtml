@model ABCRetailers_ST10436124.Models.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-shopping-cart"></i> Shopping Cart</h2>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
        <i class="fas fa-arrow-left"></i> Continue Shopping
    </a>
</div>

@if (Model.Items.Any())
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Cart Items (@Model.TotalItems items)</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@item.ImageUrl" alt="@item.ProductName" class="img-thumbnail me-3" style="width: 80px; height: 80px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="bg-light d-flex align-items-center justify-content-center me-3" style="width: 80px; height: 80px;">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <h6 class="mb-1">@item.ProductName</h6>
                                                    <small class="text-muted">Product ID: @item.ProductId.Substring(0, 8)...</small>
                                                    @if (item.Quantity > item.StockAvailable)
                                                    {
                                                        <div class="text-warning small">
                                                            <i class="fas fa-exclamation-triangle"></i> Only @item.StockAvailable in stock
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">R @item.UnitPrice.ToString("F2")</td>
                                        <td class="align-middle">
                                            <div class="input-group" style="width: 120px;">
                                                <button class="btn btn-outline-secondary btn-sm" type="button" onclick="updateQuantity(@item.CartItemId, @item.Quantity - 1)" @(item.Quantity <= 1 ? "disabled" : "")>-</button>
                                                <input type="number" class="form-control form-control-sm text-center" value="@item.Quantity" min="1" max="@item.StockAvailable" id="quantity-@item.CartItemId" readonly>
                                                <button class="btn btn-outline-secondary btn-sm" type="button" onclick="updateQuantity(@item.CartItemId, @item.Quantity + 1)" @(item.Quantity >= item.StockAvailable ? "disabled" : "")>+</button>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <strong class="text-success">R @item.Subtotal.ToString("F2")</strong>
                                        </td>
                                        <td class="align-middle">
                                            <button class="btn btn-outline-danger btn-sm" onclick="removeItem(@item.CartItemId)" title="Remove item">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Items (@Model.TotalItems):</span>
                        <span>R @Model.TotalAmount.ToString("F2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping:</span>
                        <span>R 0.00</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total:</strong>
                        <strong class="text-success h5">R @Model.TotalAmount.ToString("F2")</strong>
                    </div>

                    <a asp-action="Checkout" class="btn btn-primary btn-lg w-100">
                        <i class="fas fa-credit-card"></i> Proceed to Checkout
                    </a>

                    <div class="mt-3 text-center">
                        <small class="text-muted">
                            <i class="fas fa-lock"></i> Secure checkout
                        </small>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h6><i class="fas fa-truck"></i> Free Shipping</h6>
                    <p class="small text-muted mb-0">Free delivery on all orders over R500</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
        <h3>Your cart is empty</h3>
        <p class="text-muted mb-4">Start shopping to add items to your cart</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
            <i class="fas fa-shopping-bag"></i> Start Shopping
        </a>
    </div>
}

@section Scripts {
    <script>
        function updateQuantity(cartItemId, newQuantity) {
            if (newQuantity < 1) return;

            fetch('@Url.Action("UpdateQuantity", "Cart")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                body: JSON.stringify({ cartItemId, quantity: newQuantity })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error updating quantity');
            });
        }

        function removeItem(cartItemId) {
            if (!confirm('Are you sure you want to remove this item from your cart?')) {
                return;
            }

            fetch('@Url.Action("RemoveItem", "Cart")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                body: JSON.stringify({ cartItemId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error removing item');
            });
        }
    </script>
}