@model ABCRetailers_ST10436124.Models.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h2>
            <div class="badge bg-warning text-dark">
                <i class="fas fa-shield-alt"></i> Administrator
            </div>
        </div>

        <!-- Welcome Card -->
        <div class="card bg-dark text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h4 class="card-title">Welcome, System Administrator! 🛡️</h4>
                        <p class="card-text mb-0">Manage your store, customers, and orders from one place.</p>
                    </div>
                    <div class="col-md-4 text-end">
                        <i class="fas fa-cogs fa-4x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Total Customers</h6>
                                <h3>@Model.CustomerCount</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-users fa-2x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Total Products</h6>
                                <h3>@Model.ProductCount</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-box fa-2x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Total Orders</h6>
                                <h3>@Model.OrderCount</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-shopping-cart fa-2x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Pending Orders</h6>
                                <h3>@Model.PendingOrderCount</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-clock fa-2x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-md-4 mb-3">
                <div class="card text-center h-100">
                    <div class="card-header bg-primary text-white">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Customer Management</h5>
                        <p class="card-text">View and manage all registered customers</p>
                        <a asp-controller="Customer" asp-action="Index" class="btn btn-primary">Manage Customers</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-center h-100">
                    <div class="card-header bg-success text-white">
                        <i class="fas fa-box fa-2x"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Product Management</h5>
                        <p class="card-text">Add, edit, and manage products</p>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-success">Manage Products</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-center h-100">
                    <div class="card-header bg-info text-white">
                        <i class="fas fa-shopping-cart fa-2x"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Order Management</h5>
                        <p class="card-text">View and process customer orders</p>
                        <a asp-controller="Order" asp-action="Index" class="btn btn-info">Manage Orders</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-clock"></i> Recent Orders</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.RecentOrders.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <strong>Order #@order.OrderId</strong>
                                                <small class="text-muted">@order.CustomerName</small>
                                            </div>
                                            <span class="badge bg-@(order.Status == "Pending" ? "warning" : "success")">
                                                @order.Status
                                            </span>
                                        </div>
                                        <small>@order.OrderDate.ToString("MMM dd, yyyy") - R@(order.TotalPrice)</small>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4 text-muted">
                                <i class="fas fa-shopping-cart fa-2x mb-3"></i>
                                <p>No recent orders</p>
                            </div>
                        }
                        <div class="text-center mt-3">
                            <a asp-controller="Order" asp-action="Index" class="btn btn-outline-primary btn-sm">
                                View All Orders
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-chart-line"></i> Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-controller="Product" asp-action="Create" class="btn btn-outline-success">
                                <i class="fas fa-plus"></i> Add New Product
                            </a>
                            <a asp-controller="Customer" asp-action="Create" class="btn btn-outline-primary">
                                <i class="fas fa-user-plus"></i> Add New Customer
                            </a>
                            <a asp-controller="Upload" asp-action="Index" class="btn btn-outline-info">
                                <i class="fas fa-upload"></i> View Uploads
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>