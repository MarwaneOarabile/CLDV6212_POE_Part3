@model IEnumerable<ABCRetailers_ST10436124.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-list"></i> My Orders</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Order
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Order Date</th>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total Price</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>@order.ProductName</td>
                                <td>@order.Quantity</td>
                                <td>R@(order.UnitPrice)</td>
                                <td>R@(order.TotalPrice)</td>
                                <td>
                                    <span class="badge bg-@(order.Status == "Submitted" ? "warning" :
                                                                                                   order.Status == "Processing" ? "info" :
                                                                                                   order.Status == "Completed" ? "success" : "secondary")">
                                @order.Status
                            </span>
                        </td>
                    </tr>
                                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                <h5>No Orders Found</h5>
                <p class="text-muted">You haven't placed any orders yet.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create Your First Order
                </a>
            </div>
        }
    </div>
</div>