@model IEnumerable<ABCRetailers_ST10436124.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-box"></i> Product Catalog</h2>

    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    }
</div>

<!-- Search Box -->
<div class="row mb-4">
    <div class="col-md-6">
        <form asp-action="Search" method="get" class="d-flex">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search products by name or description..."
                       value="@ViewBag.SearchTerm" />
                <button type="submit" class="btn btn-outline-primary">
                    <i class="fas fa-search"></i> Search
                </button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Clear
                    </a>
                }
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
{
    <div class="alert alert-info mb-3">
        <i class="fas fa-info-circle"></i>
        Found @ViewBag.SearchResultsCount product(s) matching "@ViewBag.SearchTerm"
    </div>
}

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-info">
                <tr>
                    <th>Image</th>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Stock Available</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.ProductName" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="fas fa-image text-muted"></i>
                                </div>
                            }
                        </td>
                        <td><code>@product.ProductId.Substring(0, 8)...</code></td>
                        <td>@product.ProductName</td>
                        <td>@(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)</td>
                        <td>
                            <strong class="text-success">@product.Price.ToString("C")</strong>
                            @if (product.Price <= 0)
                            {
                                <br />
                                <small class="text-danger">⚠️ Price not set</small>
                            }
                        </td>
                        <td>
                            <span class="badge bg-@(product.StockAvailable > 10 ? "success" : product.StockAvailable > 0 ? "warning" : "danger")">
                                @product.StockAvailable
                            </span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <!-- Add to Cart button - only for customers -->
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
                                {
                                    <button type="button" class="btn btn-sm btn-outline-success add-to-cart-btn"
                                            data-product-id="@product.RowKey"
                                            data-product-name="@product.ProductName">
                                        <i class="fas fa-cart-plus"></i> Add to Cart
                                    </button>
                                }

                                <!-- Edit/Delete buttons - only for authenticated users (admins) -->
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a asp-action="Edit" asp-route-id="@product.RowKey" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger"
                                            onclick="confirmDelete('@product.RowKey', '@product.ProductName')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
        {
            <text>No products found matching "@ViewBag.SearchTerm".</text>
        }
        else
        {
            <text>No products found. <a asp-action="Create" class="alert-link">Add your first product</a>!</text>
        }
    </div>
}

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color: #343a40; color: #ffffff;">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete product <strong id="productName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(productId, productName) {
            document.getElementById('productName').textContent = productName;
            document.getElementById('deleteForm').action = '/Product/Delete/' + productId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        // Event delegation for add to cart buttons
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded - setting up event listeners');

            document.body.addEventListener('click', function(e) {
                if (e.target.closest('.add-to-cart-btn')) {
                    const button = e.target.closest('.add-to-cart-btn');
                    const productId = button.getAttribute('data-product-id');
                    const productName = button.getAttribute('data-product-name');

                    console.log('Add to Cart button clicked!', {
                        productId: productId,
                        productName: productName,
                        button: button
                    });

                    if (!productId || productId === 'null' || productId === '(null)') {
                        console.error('Product ID is null or invalid:', productId);
                        alert('Error: This product cannot be added to cart. Product ID is missing or invalid.');
                        return;
                    }

                    addToCart(productId, productName);
                }
            });

            // Also log all add to cart buttons on the page for debugging
            const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');
            console.log(`Found ${addToCartButtons.length} add to cart buttons on the page`);

            addToCartButtons.forEach((button, index) => {
                const productId = button.getAttribute('data-product-id');
                const productName = button.getAttribute('data-product-name');
                console.log(`Button ${index + 1}:`, { productId, productName });
            });
        });

        function addToCart(productId, productName) {
            console.log('addToCart function called with:', {
                productId: productId,
                productName: productName
            });

            fetch('@Url.Action("AddToCart", "Cart")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                body: JSON.stringify({
                    productId: productId,
                    quantity: 1
                })
            })
            .then(response => {
                console.log('Response status:', response.status);
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                console.log('Response data received:', data);
                if (data.success) {
                    // Show success message
                    const successAlert = `
                        <div class="alert alert-success alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3"
                             style="z-index: 1060;" role="alert">
                            <i class="fas fa-check-circle"></i> ${productName} added to cart!
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    `;
                    document.body.insertAdjacentHTML('beforeend', successAlert);

                    // Update cart count in navbar
                    const cartBadge = document.getElementById('cartItemCount');
                    if (cartBadge) {
                        cartBadge.textContent = data.cartItemCount;
                        console.log('Cart badge updated to:', data.cartItemCount);
                    }

                    // Auto-remove alert after 3 seconds
                    setTimeout(() => {
                        const alert = document.querySelector('.alert-success');
                        if (alert) alert.remove();
                    }, 3000);
                } else {
                    console.error('Server returned error:', data.message);
                    alert('Error: ' + (data.message || 'Unable to add product to cart'));
                }
            })
            .catch(error => {
                console.error('Fetch error:', error);
                alert('Network error adding product to cart. Please check the console for details.');
            });
        }
    </script>
}