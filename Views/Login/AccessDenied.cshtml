@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card">
            <div class="card-body py-5">
                <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
                <h1 class="display-4">Access Denied</h1>
                <p class="lead">You don't have permission to access this page.</p>
                <p class="text-muted">Please contact an administrator if you believe this is an error.</p>

                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                        <i class="fas fa-home"></i> Go Home
                    </a>
                    <a asp-controller="Login" asp-action="Logout" class="btn btn-outline-secondary">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>